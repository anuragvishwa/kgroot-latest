{
  "name": "kgroot-api",
  "version": "1.0.0",
  "description": "KGroot Knowledge Graph API - Production RCA and Analytics API",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:dev": "tsx src/server.ts",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "docker:build": "docker build -t kgroot-api:latest .",
    "docker:run": "docker run -p 3000:3000 --env-file .env kgroot-api:latest"
  },
  "keywords": [
    "knowledge-graph",
    "rca",
    "root-cause-analysis",
    "kubernetes",
    "observability",
    "neo4j",
    "fastify",
    "typescript"
  ],
  "author": "KGroot Team",
  "license": "MIT",
  "dependencies": {
    "fastify": "^5.5.0",
    "@fastify/cors": "^10.0.1",
    "@fastify/helmet": "^12.0.1",
    "@fastify/rate-limit": "^10.1.1",
    "@fastify/swagger": "^9.3.0",
    "@fastify/swagger-ui": "^5.0.1",
    "neo4j-driver": "^5.28.1",
    "dotenv": "^16.6.1",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "eslint": "^9.18.0",
    "prettier": "^3.4.2",
    "typescript": "^5.9.2",
    "tsx": "^4.15.7",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.14"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  }
}
